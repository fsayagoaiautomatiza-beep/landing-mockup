---
// Single SVG containing all client logos
const logosSvg = "https://static.tildacdn.net/tild3537-6637-4838-b935-303331643934/Group_3.svg";
---

<section id="clientes" class="py-20 sm:py-24 md:py-32 relative overflow-hidden">
    <!-- Subtle background -->
    <div class="absolute inset-0 bg-gradient-to-b from-white via-slate-50/30 to-white"></div>
    
    <div class="relative z-10">
        <!-- Title - Minimal, elegant -->
        <div 
            class="text-center mb-14 sm:mb-16 md:mb-20 px-4"
            data-animate="fade-up"
        >
            <p class="text-slate-500 text-base sm:text-lg md:text-xl font-medium tracking-wide">
                Con la confianza de los líderes del sector
            </p>
        </div>
        
        <!-- Logos Carousel - Full width, grayscale with color on hover -->
        <div 
            class="relative overflow-hidden"
            data-animate="fade-up"
            data-animate-delay="100"
        >
            <!-- Gradient fade edges - seamless transition to white -->
            <div class="absolute left-0 top-0 bottom-0 w-24 sm:w-40 md:w-64 lg:w-80 bg-gradient-to-r from-white via-white/90 to-transparent z-10 pointer-events-none"></div>
            <div class="absolute right-0 top-0 bottom-0 w-24 sm:w-40 md:w-64 lg:w-80 bg-gradient-to-l from-white via-white/90 to-transparent z-10 pointer-events-none"></div>
            
            <!-- Carousel Track -->
            <div class="flex animate-logos-scroll py-6 hover:pause-animation" id="logos-track">
                <!-- First image -->
                <div class="shrink-0 px-10 sm:px-14 md:px-20">
                    <img 
                        src={logosSvg}
                        alt="Clientes que confían en AiAutomatiza"
                        class="logos-image h-12 sm:h-16 md:h-20 lg:h-24 w-auto object-contain"
                        loading="eager"
                    />
                </div>
                
                <!-- Duplicate for seamless loop -->
                <div class="shrink-0 px-10 sm:px-14 md:px-20">
                    <img 
                        src={logosSvg}
                        alt="Clientes que confían en AiAutomatiza"
                        class="logos-image h-12 sm:h-16 md:h-20 lg:h-24 w-auto object-contain"
                        loading="eager"
                    />
                </div>
            </div>
        </div>
        
        <!-- Optional: Stats below logos -->
        <div 
            class="flex flex-wrap items-center justify-center gap-8 sm:gap-12 md:gap-16 mt-14 sm:mt-16 md:mt-20 px-4"
            data-animate="fade-up"
            data-animate-delay="200"
        >
            <div class="flex items-center gap-3 text-slate-400">
                <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">+60 clínicas activas</span>
            </div>
            <div class="flex items-center gap-3 text-slate-400">
                <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">+10,000 pacientes atendidos</span>
            </div>
            <div class="flex items-center gap-3 text-slate-400">
                <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm font-medium">4.9★ satisfacción</span>
            </div>
        </div>
    </div>
</section>

<style>
    /* Grayscale logos - color on hover (Social Proof principle) */
    .logos-image {
        filter: grayscale(100%);
        opacity: 0.5;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .logos-image:hover {
        filter: grayscale(0%);
        opacity: 1;
        transform: scale(1.02);
    }
    
    @keyframes logos-scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
    
    .animate-logos-scroll {
        animation: logos-scroll 40s linear infinite;
        will-change: transform;
    }
    
    /* Pause on hover for better interaction */
    .animate-logos-scroll:hover {
        animation-play-state: paused;
    }
    
    /* Faster on mobile for better UX */
    @media (max-width: 768px) {
        .animate-logos-scroll {
            animation-duration: 25s;
        }
    }
</style>
