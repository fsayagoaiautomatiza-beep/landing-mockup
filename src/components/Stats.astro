<section id="resultados" class="py-20 sm:py-24 md:py-32 px-4 sm:px-6 relative overflow-hidden bg-slate-50/50">
    <!-- Subtle top/bottom dividers -->
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent"></div>
    
    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Section header - generous spacing -->
        <div 
            class="text-center mb-16 sm:mb-20"
            data-animate="fade-up"
        >
            <span class="inline-flex items-center px-4 py-2 rounded-full bg-blue-50 border border-blue-100 text-blue-600 text-xs sm:text-sm font-medium tracking-wide uppercase mb-5">
                Resultados Comprobados
            </span>
            <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-4">
                Números que <span class="text-gradient">hablan solos</span>
            </h2>
        </div>
        
        <!-- Stats grid - more breathing room -->
        <div 
            class="grid grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12 lg:gap-16"
            data-animate-stagger
        >
            <!-- Stat 1 -->
            <div 
                class="text-center group"
                data-animate="fade-up"
            >
                <div class="relative inline-block mb-4">
                    <div class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-slate-900 group-hover:scale-105 transition-transform duration-300">
                        <span data-counter="40" data-counter-suffix="%">0%</span>
                    </div>
                    <!-- Subtle accent below number -->
                    <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-12 h-1 bg-gradient-to-r from-blue-500 to-violet-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <p class="text-slate-500 font-medium text-sm sm:text-base leading-relaxed">
                    Más conversión<br class="hidden sm:block" /> en llamadas
                </p>
            </div>
            
            <!-- Stat 2 -->
            <div 
                class="text-center group"
                data-animate="fade-up"
            >
                <div class="relative inline-block mb-4">
                    <div class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-slate-900 group-hover:scale-105 transition-transform duration-300">
                        <span data-counter="91" data-counter-suffix="%">0%</span>
                    </div>
                    <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-12 h-1 bg-gradient-to-r from-blue-500 to-violet-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <p class="text-slate-500 font-medium text-sm sm:text-base leading-relaxed">
                    Consultas resueltas<br class="hidden sm:block" /> en &lt;2min
                </p>
            </div>

            <!-- Stat 3 -->
            <div 
                class="text-center group"
                data-animate="fade-up"
            >
                <div class="relative inline-block mb-4">
                    <div class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-slate-900 group-hover:scale-105 transition-transform duration-300">
                        <span data-counter="92" data-counter-suffix="%">0%</span>
                    </div>
                    <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-12 h-1 bg-gradient-to-r from-blue-500 to-violet-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <p class="text-slate-500 font-medium text-sm sm:text-base leading-relaxed">
                    Reducción de<br class="hidden sm:block" /> carga operativa
                </p>
            </div>

            <!-- Stat 4 -->
            <div 
                class="text-center group"
                data-animate="fade-up"
            >
                <div class="relative inline-block mb-4">
                    <div class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-slate-900 group-hover:scale-105 transition-transform duration-300">
                        <span data-counter="29" data-counter-suffix="%">0%</span>
                    </div>
                    <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-12 h-1 bg-gradient-to-r from-blue-500 to-violet-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <p class="text-slate-500 font-medium text-sm sm:text-base leading-relaxed">
                    Reactivación<br class="hidden sm:block" /> de pacientes
                </p>
            </div>
        </div>
    </div>
</section>
